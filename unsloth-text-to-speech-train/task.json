{
  "title": "Unsloth Text-to-Speech Training Task",
  "name": "unsloth-text-to-speech-train-task",
  "command": "cd ~/unsloth-text-to-speech-train && python train.py", 
  "accelerators": "RTX3090:1",
  "setup": "uv pip install unsloth snac transformerlab  datasets==3.6.0 librosa soundfile",
  "env_vars": {
    "WANDB_PROJECT": "unsloth-text-to-speech-training",
    "PYTHONUNBUFFERED": "1",
    "HF_TOKEN": "ENTER YOUR HF_TOKEN HERE",
    "WANDB_API_KEY": "ENTER YOUR WANDB_API_KEY HERE"
  },
  "parameters": {
    "model_name": "unsloth/orpheus-3b-0.1-ft",
    "dataset": "bosonai/EmergentTTS-Eval",
    "audio_column_name": "audio",
    "text_column_name": "text_to_synthesize",
    "lora_alpha": 32,
    "lora_dropout": 0.0,
    "lora_r": 16,
    "maximum_sequence_length": 1024,
    "max_grad_norm": 0.3,
    "learning_rate": 0.00005,
    "learning_rate_schedule": "linear",
    "batch_size": 1,
    "num_train_epochs": 1,
    "weight_decay": 0.0,
    "adam_beta1": 0.9,
    "adam_beta2": 0.999,
    "adam_epsilon": 0.00000001,
    "sampling_rate": 24000,
    "max_steps": -1,
    "model_architecture": "OrpheusForConditionalGeneration"
  },
  "description":  "A Text-to-Speech (TTS) trainer based on the unsloth audio training notebooks."
}